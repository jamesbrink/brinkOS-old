# Maintainer: James Brink <brink.james@gmail.com>
# Previous Maintainer: Alex Gajewski <agajews@gmail.com>

_pkgname='brinkOS Wallpapers'
pkgname=brinkOS-wallpapers
pkgver=1.0.0
pkgrel=1
pkgdesc='Wallpapers for brinkOS (Originally Apricity-OS Wallpapers)'
arch=(any)
license=(GPL)
url="https://github.com/jamesbrink/brinkOS"
depends=()
install=brinkOS-wallpapers.install

package() {
	mkdir -p "${pkgdir}/usr/share/backgrounds"
	cp -rf "${srcdir}/brinkOS-wallpapers/backgrounds/brinkOS" "${pkgdir}/usr/share/backgrounds"
	mkdir -p "${pkgdir}/usr/share/gnome-background-properties"
	cp -f "${srcdir}/brinkOS-wallpapers/brinkOS-backgrounds.xml" "${pkgdir}/usr/share/gnome-background-properties"
}
